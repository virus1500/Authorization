<Window x:Class="Authorization.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authorization.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" ResizeMode="NoResize" Height="350" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="130" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <TextBlock Text="Логин" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" FontSize="20"/>
        <TextBox Name="LoginTb" Grid.Column="2" Grid.Row="1" Height="50" Width="250"/>
        <TextBlock Text="Пароль" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" FontSize="20"/>
        <PasswordBox Name="PassPb" Grid.Column="2" Grid.Row="2" Height="50" Width="250"/>
        <Button Name="EnterBtn" Content="Войти" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" Height="50" Width="150" Click="EnterBtn_Click" />
    </Grid>
</Window>
